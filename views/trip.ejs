<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
  defer
></script>
    <script src="/scripts/trip.js" defer></script>
    <title>Trip Planner</title>
  </head>
  <body>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Edit Trip</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <form id="editTripForm">
              <div class="mb-3">
                <input type= text id="tripIDModal" style="display: none;" name="tripID"/>
                <input type= text id="tripImageModal" style="display: none;" name="tripImage"/>
                <label for="tripNameModal" class="form-label" >Name</label>
                <input type="text" class="form-control" id="tripNameModal" placeholder="Enter trip name" name="tripName" />
              </div>
              <div class="mb-3">
                <label for="tripDescriptionModal" class="form-label">Description</label>
                <textarea class="form-control" id="tripDescriptionModal" rows="4" placeholder="Enter trip description" name="tripDescription" required></textarea>
              </div>
              <div class="mb-3">
                <label for="tripVisitsModal" class="form-label">Visits</label>
                <input type="number" max="20" min="1" class="form-control" id="tripVisitsModal" placeholder="Number of visits" required/>
              </div>
              <!-- <div class="input-group mb-3">
                <div class="input-group-prepend">
                  <span class="input-group-text">Upload</span>
                </div>
                <div class="custom-file">
                  <input type="file" class="custom-file-input" id="inputGroupFile01">
                  <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                </div>
              </div> -->
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class=" btn btn-primary" id="saveChangesBtn">Save changes</button>
          </div>
        </div>
      </div>
    </div>
    <%- include('partials/header') %>
    <%- include('partials/tripHeader') %>
    <div class="container">
      <div class="row g-4">
        <% trips.forEach(trip => { %>
          <div class="col-12 col-md-6 col-lg-4">
            <div class="card h-100 w-75">
              <img class="card-img-top" id="tripImage<%= trip.id%>" src="<%= trip.image%>" alt="<%= trip.name%>">
              <div class="card-body">
                <h5 class="card-title" id="tripName<%= trip.id %>"><%= trip.name %></h5>
                <p id="tripID<%= trip.id %>" style="display: none;"><%= trip.id %></p>
                <p id="tripDescription<%= trip.id %>"><%= trip.description %></p>
                <p><strong>Visits:</strong> <span id="tripVisits<%= trip.id %>"><%= trip.visits %></span></p>
              </div>
              <div class ="updateButtons">
              <div class="card-body ">
                <!-- <button class=" btn btn-primary" onclick="insertTripDetails('<%= trip.id %>')">Edit</button> -->

                <button class=" btn btn-primary" onclick="editTripDetails('<%= trip.id %>')">Edit</button>
                <button class=" btn btn-danger" onclick="deleteThisTrip('<%= trip.id %>')">Delete</button>
              </div>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
